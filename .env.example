# LLM configuration
# Set LLM_PROVIDER to 'qwen', 'openai', or 'gemini'. If omitted, the system will
# auto-detect based on which API key is present.
LLM_PROVIDER=qwen
LLM_MODEL=qwen3-max
LLM_TIMEOUT=30
LLM_SHORT_TIMEOUT=20
LLM_LONG_TIMEOUT=60
LLM_AUTO_ANALYSIS=0

# Qwen (DashScope)
QWEN_API_KEY=replace-with-your-qwen-key

# OpenAI
OPENAI_API_KEY=replace-with-your-openai-key
OPENAI_MODEL=gpt-5

# Gemini
GEMINI_API_KEY=replace-with-your-gemini-key
GEMINI_MODEL=gemini-2.5-pro

# AkShare behaviour
# Set to 1 if you wish to disable AkShare 美股备用数据源。
AKSHARE_DISABLE_US=0

# Finnhub
FINNHUB_API_KEY=replace-with-your-finnhub-key

# Tushare
TUSHARE_TOKEN=replace-with-your-tushare-token

# === 数据源优先级 ===
A_STOCK_PRIMARY=akshare
A_STOCK_SECONDARY=tushare
HK_STOCK_PRIMARY=yfinance
HK_STOCK_SECONDARY=akshare
US_STOCK_PRIMARY=yfinance

# 低频信息源
ALPHA_VANTAGE_API_KEY=replace-with-your-alpha-vantage-key

# === 限流配置 ===
YF_MAX_RPM=30
YF_PER_SYMBOL_MIN_INTERVAL=10
AK_MAX_RPM=20
AK_ENDPOINT_MIN_INTERVAL=3
TS_MAX_RPM=450
TS_PER_SYMBOL_MIN_INTERVAL=2
RETRY_ENABLED=true
RETRY_COUNT=3
RETRY_BACKOFF_BASE=1

# === 多级缓存 ===
CACHE_ENABLED=true
REDIS_ENABLED=false
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

MONGO_ENABLED=false
MONGO_URI=mongodb://localhost:27017
MONGO_DB=stockai_cache
MONGO_COLLECTION=timeseries_cache

CACHE_DIR=cache

TTL_QUOTE_FAST=30
TTL_INTRADAY=60
TTL_DAILY=3600
TTL_FUNDAMENTAL=21600
MACRO_SNAPSHOT_TTL=300
